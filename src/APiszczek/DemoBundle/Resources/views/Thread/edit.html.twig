{% extends "APiszczekDemoBundle:Layout:layout.html.twig" %}
{% block title %}Edytuj post{% endblock %}
{% block pageHeader %}
    Edytuj post
    <small></small>
{% endblock %}

{% block content -%}
<div class="container auth">

      <div id="big-form" class="well auth-box">
        <form action="#" method="post"  {{ form_enctype(edit_form) }}>
          <fieldset>
   {{ form_start(edit_form) }}

   	<div class="row col-md-7"> 
  	 <div class="form-group col-md-10">
  	 		{{ form_label(edit_form.title, null, {'label_attr': {'class': 'control-label'}}) }}
              {{ form_widget(edit_form.title, {'attr': {'class': 'form-control input-md'}}) }}
              
        </div>
    
       
      <div class="form-group col-md-12">
  	 		{{ form_label(edit_form.slug, null, {'label_attr': {'class': 'control-label'}}) }}
              {{ form_widget(edit_form.slug, {'attr': {'class': 'form-control input-md'}}) }}
       </div>
    
      <div class="form-group  col-md-12">
  	 		{{ form_label(edit_form.content, null, {'label_attr': {'class': 'control-label'}}) }}
  			{{ form_widget(edit_form.content, {'attr': {'class': 'form-control input-md'}}) }}
                
      </div> 

      </div>

     
  	<div class="form-group form-group col-md-7">

              <label class=" control-label" for="button1id">Potwierdz</label>
              <div class="">
                <button type="submit" id="button1id" name="button1id" class="btn btn-success">Dodaj nowe zdjêcie</button>
              </div>
            </div>
  {{ form_end(edit_form) }}






      </div>
      <div class="clearfix"></div>
    </div>
	


     <ul class="record_actions">
    <li>
        <a href="{{ path('thread') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
